######################################################################
# --- APP --- CONTAINER BASICS
######################################################################

IMAGE=seafileltd/seafile-mc:13.0-latest                                                                                                                         # OCI image reference pulled for the application
APP_NAME=seafile                                                                                                                                                # Container name, hostname, and prefix for proxy labels
APP_UID=8000                                                                                                                                                    # UID used inside the container (match with ownership of mounted files)
APP_GID=8000                                                                                                                                                    # GID used inside the container (match with ownership of mounted files)

###################################
# TRAEFIK
###################################
TRAEFIK_HOST=Host(`seafile.example.com`)                                                                                                                        # Router rule: wrap with Host(), HostRegexp(), etc. (no surrounding quotes needed)
TRAEFIK_PORT=80                                                                                                                                                 # Internal container port the proxy should connect to

######################################################################
# --- APP --- FILESYSTEM & SECRETS
######################################################################

OAUTH_CLIENT_ID_PATH=./secrets                                                                                                                                  # Host path where secrets are stored (use absolute path in production)
OAUTH_CLIENT_ID_FILENAME=OAUTH_CLIENT_ID                                                                                                                        # Secret filename (e.g., APP_PASSWORD)

OAUTH_CLIENT_SECRET_PATH=./secrets                                                                                                                              # Host path where secrets are stored (use absolute path in production)
OAUTH_CLIENT_SECRET_FILENAME=OAUTH_CLIENT_SECRET                                                                                                                # Secret filename (e.g., APP_PASSWORD)

######################################################################
# --- APP --- SECURITY PROFILES
######################################################################

APPARMOR_PROFILE=docker-default                                                                                                                                 # AppArmor profile to enforce on compatible hosts (set to unconfined when unsupported)

######################################################################
# --- APP --- RESOURCE LIMITS
######################################################################

# MEM_LIMIT=512m                                                                                                                                                # Memory ceiling for the container (increase after observing consumption)
# CPU_LIMIT=1.0                                                                                                                                                 # CPU quota (1.0 = one full core); raise only when needed
# PIDS_LIMIT=128                                                                                                                                                # Maximum number of processes/threads inside the container
# SHM_SIZE=64m                                                                                                                                                  # Size of the /dev/shm tmpfs (increase for Chromium, video processing, etc.)

######################################################################
# --- APP --- ENVIRONMENT VARIABLES
######################################################################

TIME_ZONE=CET                                                                                                                                                   # Time zone
JWT_PRIVATE_KEY=vVyHSyDvvjpK0B9AViecmtmaM4eZgSuZZxbPDdcl                                                                                                        # JWT_PRIVATE_KEY, A random string with a length of no less than 32 characters is required for Seafile, which can be generated by using pwgen -s 40 1
SEAFILE_SERVER_PROTOCOL=https                                                                                                                                   # Seafile server protocol (http or https)
SEAFILE_SERVER_HOSTNAME=seafile.example.com                                                                                                                     # Seafile server hostname or domain
INIT_SEAFILE_ADMIN_EMAIL=me@example.com                                                                                                                         # Admin username (me@example.com)
INIT_SEAFILE_ADMIN_PASSWORD=asecret                                                                                                                             # Admin password
NON_ROOT=false                                                                                                                                                  # Run Seafile container without a root user
ENABLE_GO_FILESERVER=true                                                                                                                                       # Enables Seafile’s Go-based file server instead of the legacy one — faster, more scalable, and supports streaming downloads (better performance under high concurrency)
SEAFILE_LOG_TO_STDOUT=true                                                                                                                                      # Sends Seafile logs to standard output so you can view them via docker logs and collect them with container log pipelines instead of writing to log files

######################################################################
# --- APP --- WEBDAV (SeafDAV)
######################################################################

ENABLE_SEAFDAV=true                                                                                                                                             # Enable WebDAV access via /seafdav endpoint

###################################
# SEAFILE NOTIFICATION SERVER
###################################
ENABLE_NOTIFICATION_SERVER=true                                                                                                                                 # Enable (true) or disable (false) notification feature for Seafile
NOTIFICATION_SERVER_LOG_LEVEL=info                                                                                                                              # Log level of the notification server

###################################
# SEAFILE SEADOC SERVER
###################################
ENABLE_SEADOC=true                                                                                                                                              # Enable (true) or disable (false) SeaDoc feature for Seafile

######################################################################
# --- APP --- OAUTH/AUTHENTIK
######################################################################

OAUTH_PROVIDER_DOMAIN=https://authentik.example.com                                                                                                             # Authentik provider domain

######################################################################
# --- APP --- OVERWRITES
######################################################################