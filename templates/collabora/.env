######################################################################
# --- COLLABORA --- CONTAINER BASICS
######################################################################

COLLABORA_IMAGE=docker.io/collabora/code:latest                                                                                                                      # OCI image reference for Collabora Online Development Edition (CODE)

######################################################################
# --- COLLABORA --- NETWORKING / REVERSE PROXY
######################################################################

COLLABORA_HOST=Host(`office.example.com`)                                                                                                                            # Traefik router rule: Collabora needs its OWN domain (separate from the app)
COLLABORA_SERVER_NAME=office.example.com                                                                                                                             # Public hostname of the Collabora server (must match COLLABORA_HOST)

######################################################################
# --- COLLABORA --- WOPI CONFIGURATION
######################################################################

COLLABORA_ALIASGROUP1=https://seafile\\.example\\.com                                                                                                                # Allowed WOPI host URL pattern (regex-escaped dots); must match the app's public URL
COLLABORA_DICTIONARIES=de_DE en_US                                                                                                                                   # Space-separated spell-check dictionaries (e.g., en_US de_DE fr_FR es_ES)
COLLABORA_EXTRA_PARAMS=--o:ssl.enable=false --o:ssl.termination=true                                                                                                 # SSL disabled internally; reverse proxy handles TLS termination
